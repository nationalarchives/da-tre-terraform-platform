{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "KMSAccess",
            "Effect": "Allow",
            "Action": [
                "kms:Encrypt",
                "kms:Decrypt",
                "kms:GenerateDataKey"
            ],
            "Resource": [
                "*",
                "arn:aws:kms:eu-west-2:454286877087:key/e079adef-d0a8-4f7e-ad09-80957f8fba5a"
            ]
        },
        {
            "Sid": "SNSAccess",
            "Effect": "Allow",
            "Action": [
                "sns:Subscribe",
                "sns:Unsubscribe",
                "sns:SetSubscriptionAttributes",
                "sns:Publish"
            ],
            "Resource": [
                "arn:aws:sns:${aws_region}:${account_id}:*-da-eventbus",
                "arn:aws:sns:${aws_region}:${account_id}:dev-da-eventbus"
            ]
        },
        {
            "Sid": "SQSAccess",
            "Effect": "Allow",
            "Action": [
                "sqs:CreateQueue",
                "sqs:PurgeQueue",
                "sqs:DeleteMessage",
                "sqs:DeleteQueue",
                "sqs:ReceiveMessage",
                "sqs:SetQueueAttributes"
            ],
            "Resource": [
                "arn:aws:sqs:${aws_region}:${account_id}:*-temp-out-testing"
            ]
        },
        {
            "Sid": "SampleDataS3Access",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::da-transform-sample-data",
                "arn:aws:s3:::da-transform-sample-data/*"
            ]
        },
        {
            "Sid": "PackOutS3Access",
            "Action": [
                "s3:GetObject"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::*-court-document-pack-out",
                "arn:aws:s3:::*-court-document-pack-out/*"
            ]
        }
    ]
}
